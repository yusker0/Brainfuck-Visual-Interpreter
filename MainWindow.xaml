                    <Grid HorizontalAlignment="Right" VerticalAlignment="Center" Width="2" Height="30" Background="#FF868686"/>
                    <Button x:Name="cancelStepButton" Style="{DynamicResource YKButtonStyle}" Width="90" Click="cancelStepButton_Click"
