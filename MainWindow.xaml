                        File
                    </Button>
                    <Button x:Name="runButton" Width="50" Click="runButton_Click" Style="{StaticResource YKButtonStyle}"
                                    HorizontalAlignment="Left" BorderThickness="0,0,0,0" Foreground="Black" BorderBrush="Black" Background="#FFE6E6E6" IsEnabled="False">
                        Run
                    </Button>
                    <Button x:Name="playButton" Style="{StaticResource YKButtonStyle}" Width="58" Click="playButton_Click"
                                    HorizontalAlignment="Left" BorderThickness="0,0,0,0" Foreground="Black" BorderBrush="Black" Background="#FFE6E6E6" IsEnabled="False">
                        Play
                    </Button>
                    <Button x:Name="speedPlusButton" Width="75" Click="speedPlusButton_Click" Style="{StaticResource YKButtonStyle}"
                                    HorizontalAlignment="Left" BorderThickness="0,0,0,0" Foreground="Black" BorderBrush="Black" Background="#FFE6E6E6" IsEnabled="False">
                        Speed+
                        <Button.ToolTip>
                            <ToolTip x:Name="speedPlusTip">
                                1 step/second
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button x:Name="speedMinusButton" Width="75" Click="speedMinusButton_Click" Style="{StaticResource YKButtonStyle}"
                                    HorizontalAlignment="Left" BorderThickness="0,0,0,0" Foreground="Black" BorderBrush="Black" Background="#FFE6E6E6" IsEnabled="False">
                        Speed-
                        <Button.ToolTip>
                            <ToolTip x:Name="speedMinusTip">
                                1 step/second
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Grid Width="2" Background="#FF868686">
                    </Grid>
                </StackPanel>
                <TextBlock x:Name="appName" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">Brainfuck Visual Interpreter</TextBlock>
